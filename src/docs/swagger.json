{
  "openapi": "3.0.0",
  "info": {
    "title": "API RESTful de XBUniverse",
    "version": "1.0.0",
    "description": "Documentaci칩n de la API de XBUniverse"
  },
  "servers": [
    {
      "url": "http://localhost:9090",
      "description": "Servidor de desarrollo"
    },
    {
      "url": "https://xb-api.vercel.app/",
      "description": "Servidor en producci칩n"
    }
  ],
  "components":{
    "schemas": {
      "Books": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string"
          }
        }
      }
    }
  },
  "paths": {
    "/api":{
      "get": {
        "summary": "redirecciona a /api/books"
      }
    },
    "/api/books": {
      "get": {
        "summary": "Obtiene todos los libros",
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "info": {
                      "type": "object",
                      "properties": {
                        "totalBooks": {
                          "type": "number"
                        },
                        "totalPages": {
                          "type": "number"
                        },
                        "currentPage": {
                          "type": "number"
                        },
                        "nextPage": {
                          "type": "number"
                        },
                        "prevPage": {
                          "type": "number"
                        },
                        "nextPageLink": {
                          "type": "string"
                        },
                        "prevPageLink": {
                          "type": "string"
                        }
                      }
                    },
                    "results": {
                      "type": "array",
                      "items": {
                        "type": "object",
                        "properties":{
                          "image": {
                            "type": "object",
                            "properties": {
                              "url": {
                                "type": "string"
                              },
                              "public_id": {
                                "type":"string"
                              }
                            }
                          },
                          "title": {
                            "type": "string"
                          },
                          "category": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "language": {
                            "type": "string"
                          },
                          "pathUrl": {
                            "type": "string"
                          },
                          "authors": {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          "id": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  },
                  "items": {
                    "$ref": "#/components/schemas/Books"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/books?page={page}&limit={limit}":{
      "get": {
        "summary": "Paginaci칩n y limite"
      }
    },
    "/api/book/{id}":{
      "get": {
        "summary": "Ver un libro con todos los detalles",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "ID del libro",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "image": {
                      "type": "object",
                      "properties": {
                        "url": {
                          "type": "string"
                        },
                        "public_id": {
                          "type": "string"
                        }
                      }
                    },
                    "title": {
                      "type": "string"
                    },
                    "synopsis": {
                      "type": "string"
                    },
                    "category": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "sourceLink": {
                      "type": "string"
                    },
                    "language": {
                      "type": "string"
                    },
                    "year": {
                      "type": "number"
                    },
                    "numberPages": {
                      "type": "number"
                    },
                    "format": {
                      "type": "string"
                    },
                    "pathUrl": {
                      "type": "string"
                    },
                    "authors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/book/path/{pathUrl}":{
      "get": {
        "summary": "Exactamente igual que buscar un libro por ID pero esta vez buscarlo por su titulo con este formato: 'la-casa-de-los-espiritus-UVfw'"
      }
    },
    "/api/books/search?q={title / author}":{
      "get": {
        "summary": "Buscar libros por titulo o autor via consulta"
      }
    },
    "/api/books/options":{
      "get": {
        "summary": "Esta consulta agrupa y muestra: las categorias, lenguaje y a침os con su respectiva cantidad de cada uno"
      }
    },
    "/api/books/more-books":{
      "get": {
        "summary": "Muestra 3 libros random",
        "responses": {
          "200": {
            "description": "Ok",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "title": {
                      "type": "string"
                    },
                    "pathUrl": {
                      "type": "string"
                    },
                    "authors": {
                      "type": "array",
                      "items": {
                        "type": "string"
                      }
                    },
                    "id": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/book/post":{
      "post": {
        "summary": "Guardar un nuevo libro"
      }
    },
    "/api/book/update/{id}":{
      "patch": {
        "summary": "Actualizar un libro"
      }
    },
    "/api/book/delete/{id}":{
      "delete": {
        "summary": "Borrar un libro"
      }
    }
  }
}
